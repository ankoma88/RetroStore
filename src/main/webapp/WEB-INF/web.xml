<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Retro Store</display-name>

    <servlet>
        <servlet-name>StartServlet</servlet-name>
        <servlet-class>com.ak.rstore.servlets.StartServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProductShowingServlet</servlet-name>
        <servlet-class>com.ak.rstore.servlets.ProductShowingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StartServlet</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProductShowingServlet</servlet-name>
        <url-pattern>/showProducts</url-pattern>
    </servlet-mapping>

</web-app>
